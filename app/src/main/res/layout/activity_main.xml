<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg4"
    android:id="@+id/idLayout">

    <Button
        android:id="@+id/btnSetSchedule"
        android:layout_width="145dp"
        android:layout_height="91dp"
        android:layout_marginStart="133dp"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="133dp"
        android:layout_marginRight="133dp"
        android:background="@drawable/custom_button"
        android:text="Set Schedule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPower" />

    <ToggleButton
        android:id="@+id/btnPower"
        android:layout_width="179dp"
        android:layout_height="134dp"
        android:layout_marginStart="117dp"
        android:layout_marginEnd="115dp"
        android:background="@drawable/custom_button"
        android:text="ToggleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnstats"
        android:layout_width="145dp"
        android:layout_height="91dp"
        android:layout_marginStart="134dp"
        android:layout_marginLeft="134dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="134dp"
        android:layout_marginRight="134dp"
        android:background="@drawable/custom_button"
        android:text="Check Status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSetSchedule" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="153dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="153dp"
        android:text="POWER BUTTON"
        app:layout_constraintBottom_toTopOf="@+id/btnPower"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/button2"
        android:layout_width="145dp"
        android:layout_height="91dp"
        android:layout_marginStart="134dp"
        android:layout_marginLeft="134dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="134dp"
        android:layout_marginRight="134dp"
        android:background="@drawable/custom_button"
        android:text="Schedule List"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnstats" />

</android.support.constraint.ConstraintLayout>